{
  "name": "@buildonspark/spark-sdk",
  "version": "0.0.30",
  "description": "",
  "author": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./signer": {
      "import": "./dist/signer/signer.js",
      "require": "./dist/signer/signer.cjs"
    },
    "./services/wallet-config": {
      "import": "./dist/services/wallet-config.js",
      "require": "./dist/services/wallet-config.cjs"
    },
    "./test-util": {
      "import": "./dist/tests/test-util.js",
      "require": "./dist/tests/test-util.cjs"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./token-transactions": {
      "import": "./dist/services/token-transactions.js",
      "require": "./dist/services/token-transactions.cjs"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    },
    "./config": {
      "import": "./dist/services/config.js",
      "require": "./dist/services/config.cjs"
    },
    "./connection": {
      "import": "./dist/services/connection.js",
      "require": "./dist/services/connection.cjs"
    },
    "./proto/spark": {
      "import": "./dist/proto/spark.js",
      "require": "./dist/proto/spark.cjs"
    },
    "./address": {
      "import": "./dist/address/index.js",
      "require": "./dist/address/index.cjs"
    }
  },
  "browser": {
    "assert": false,
    "crypto": false,
    "fs": false,
    "fs/promises": false,
    "nice-grpc": "./dist/nice-grpc-web.js",
    "path": false,
    "url": false
  },
  "scripts": {
    "build": "NODE_ENV=development yarn tsc && tsup",
    "build:prod": "NODE_ENV=production yarn tsc && tsup",
    "build:watch": "yarn build --watch --clean=false",
    "clean": "rm -rf dist",
    "circular-deps": "madge --circular --extensions ts,tsx src",
    "dev": "yarn build -- --watch",
    "depcheck": "depcheck --ignores=buffer,ts-proto,jest,ts-jest",
    "docs": "typedoc src",
    "format:fix": "prettier src --write",
    "format": "prettier src --check",
    "lint:fix": "eslint --fix .",
    "lint:fix:continue": "eslint --fix . || exit 0",
    "lint:watch": "esw ./src -w --ext .ts,.tsx,.js --color",
    "lint": "eslint .",
    "package:checks": "yarn depcheck && yarn publint && yarn attw --pack . && echo \"\nPackage checks passed successfully!\"",
    "postversion": "yarn build",
    "test-cmd": "node --experimental-vm-modules $(yarn bin jest) --no-cache --runInBand --detectOpenHandles --forceExit ",
    "test": "yarn test-cmd src/tests/*.test.ts",
    "test:integration": "yarn test-cmd src/tests/integration/*.test.ts",
    "test:integration:ssp": "yarn test-cmd src/tests/integration/ssp/*.test.ts",
    "types:watch": "tsc-absolute --watch",
    "types": "tsc",
    "patch-wasm": "node ./wasm/patch-wasm.mjs",
    "generate:proto": "PATH=\"$PATH:./node_modules/.bin\" protoc --ts_proto_out=./src/proto --ts_proto_opt=outputServices=nice-grpc,useExactTypes=false,outputServices=generic-definitions,oneof=unions,importSuffix=.js --proto_path=../../../../protos spark.proto mock.proto spark_authn.proto"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "depcheck": "^1.4.7",
    "jest": "^29.7.0",
    "madge": "^8.0.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.5.1",
    "publint": "^0.3.9",
    "ts-jest": "^29.2.5",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.5",
    "@buildonspark/lrc20-sdk": "0.0.28",
    "@lightsparkdev/core": "^1.3.0",
    "@noble/curves": "^1.8.0",
    "@noble/hashes": "^1.7.1",
    "@scure/base": "^1.2.4",
    "@scure/bip32": "^1.6.2",
    "@scure/bip39": "^1.5.4",
    "@scure/btc-signer": "^1.5.0",
    "async-mutex": "^0.5.0",
    "bitcoinjs-lib": "^6.1.5",
    "buffer": "^6.0.3",
    "eciesjs": "^0.4.13",
    "light-bolt11-decoder": "^3.2.0",
    "nice-grpc": "^2.1.10",
    "nice-grpc-client-middleware-retry": "^3.1.10",
    "nice-grpc-common": "^2.0.2",
    "nice-grpc-web": "^3.3.5",
    "ts-proto": "^2.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      },
      "tsx": {
        "skipTypeImports": true
      }
    }
  }
}
